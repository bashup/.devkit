#!/usr/bin/env bash

# Use cram and watch for testing, and provide a shell console
import: cram
import: entr-watch
import: shell-console

# Auto-build dk and re-exec it if needed
if [[ dk.md -nt dk ]]; then
    require-any bashpackr basher install bashup/bashpackr
    bashpackr --pack dk.md dk
    exec "./dk" "$@"
fi
